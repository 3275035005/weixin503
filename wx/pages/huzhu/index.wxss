/* --- list --- */
.collage-item{background-color: #fff; border-radius: 32rpx; box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.07); padding: 32rpx; margin-bottom: 32rpx; position: relative;}

/* image */
.collage-item-image{width: 128rpx; height: 128rpx; border-radius: 32rpx; overflow: hidden;}

/* top */
.collage-item-top{margin-bottom: 32rpx;}

/* content */
.collage-item-content{width: 75%; margin-left: 24rpx;}
.collage-item-title{font-size: 28rpx; margin-bottom: 8rpx;}

/* bottom */
.collage-item-text{font-size: 24rpx; opacity: .4;}
.collage-item-time{font-size: 28rpx; font-family: din; opacity: .5; margin-right: auto;}

/* btn */
.collage-item-btn{ width: 170rpx; height: 64rpx; font-size: 24rpx; border-radius: 100rpx; border: none; background: #666; color: #fff; margin: 0;}
.collage-item-btn::after{border: none;}
.collage-item-btn.blue{background-color: #5460FE;}

/* state */
.collage-item-state{width: 160rpx; height: 160rpx; position: absolute; right: 0; top: 0;}  

.page_nodata{text-align: center;}
.page_nodata .icon{width: 400rpx; height: 45vh;}
.page_nodata .text{color: #999; font-size: 32rpx;}

/* 侧导航 */
.side{
  background-color: #fff;
  width: 100rpx;
  height: 200rpx;
  border-radius: 50rpx;
  position: fixed;
  z-index:999999999;
  top: 1000rpx;
  left: 630rpx;
}
.side .add{
  font-size: 50rpx;
  background-color:#5460FE;
  width: 90rpx;
  border-radius: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 0rpx;
  font-weight: bold;
  color: #fff;
}
